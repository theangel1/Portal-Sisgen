@model Portal_Sisgen.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Editar Usuario</h2>
<br />

<form method="post" asp-action="Edit">
    <div class="container ">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">

            <div class="col-3 ">
                <input type="submit" class="btn btn-info form-control" value="Modificar" />
            </div>

            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
            </div>

        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}