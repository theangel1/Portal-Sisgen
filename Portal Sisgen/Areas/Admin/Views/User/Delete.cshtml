@model Portal_Sisgen.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Eliminar Categoria</h2>
<br />

<form method="post" asp-action="Delete">
    <div class="container">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Nombre" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group row">

            <div class="col-3">
                <input type="submit" class="btn btn-danger form-control" value="Eliminar" />
            </div>

            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
            </div>

        </div>

    </div>
</form>

